buying = false
if getgenv().diamondloop ~= nil then
	getgenv().diamondloop:Disconnect()
end
getgenv().diamondloop = game:GetService("RunService").RenderStepped:Connect(function()
	for i,v in pairs(workspace.CollectibleDiamonds:GetChildren()) do
		if buying == false then
			buying = true
			local oldpos = game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame
			game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = v.CFrame
			wait(0.5)
			game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = oldpos
			buying = false
		end
	end
end)
